{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "rootDir": "./src",
    "outDir": "./dist",                                
    "moduleResolution": "node",                       
    "baseUrl": "./",                                
    "types": [
      "node"
    ],
    "sourceMap": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,            
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.tsx"
  ]
}
